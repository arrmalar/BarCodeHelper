@model BarCode

<div class="container mt-5">
    <div class="card shadow-lg border-0 mt-4">

        <div class="card-header bg-secondary bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Choose an option</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <div class="col-12">
                    <div class="border p-4 rounded">

                        <div class="row mb-4 justify-content-center">
                            <div class="col-12 col-md-5 d-flex justify-content-center mb-3 mb-md-0">
                                <button class="btn btn-primary form-control me-3" onclick="location.href='@Url.Action("Details", "Options", @Model)'">
                                    Details
                                </button>
                            </div>
                            <div class="col-12 col-md-5 d-flex justify-content-center">
                                <button class="btn btn-primary form-control" onclick="location.href='@Url.Action("Logs", "Options", @Model)'">
                                    Logs
                                </button>
                            </div>
                        </div>

                        <div class="row justify-content-center">
                            <div class="col-12 col-md-5 d-flex justify-content-center mb-3 mb-md-0">
                                <button class="btn btn-primary form-control me-3" onclick="location.href='@Url.Action("Move", "Options", @Model)'">
                                    Move
                                </button>
                            </div>
                            <div class="col-12 col-md-5 d-flex justify-content-center">
                                <button class="btn btn-danger form-control" onclick="Delete('/employee/options/delete?barcodenumber=@Model.BarCodeNumber')">
                                    Delete
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <script src="~/js/delete.js"></script>
    }
}