@model String

<div class="container mt-5">
    <div class="card shadow-lg border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Please Insert Barcode</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row g-3">
                <div class="col-12">
                    <div class="custom-input-group mb-3 p-3">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-upc-scan"></i> <!-- Bootstrap icon for barcode -->
                            </span>
                            <input type="text" name="barCodeNumber" placeholder="Barcode" class="form-control" aria-label="Barcode">
                        </div>
                    </div>

                    <div class="row mt-3 justify-content-center">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle-fill me-3"></i>Add
                            </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
